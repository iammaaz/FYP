            @Html.DisplayFor(modelItem => item.AspNetUser.Hometown)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HallAddress.StreetAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HallCapacity.AdditionalInfoCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MyHallPricing.AdditionalPricingInfo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HallInfoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.HallInfoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HallInfoID })
