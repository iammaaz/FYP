            @Html.DisplayNameFor(model => model.HallName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HallMapLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HallDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HallShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Hometown)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HallAddress.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HallCapacity.AdditionalInfoCapacity)
