            @Html.DisplayFor(modelItem => item.HallMapLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HallDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HallShortDescription)
        </td>
