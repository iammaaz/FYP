@model IEnumerable<FYP_Demo.HallInfo>

@{
    ViewBag.Title = "GetVenues";
    Layout = "~/Views/Shared/_ListyLayout.cshtml";
}

<h2>GetVenues</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
